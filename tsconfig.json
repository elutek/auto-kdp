{
  "compilerOptions": {
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "rootDir": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "build/**/*",
    "dist",
    "download",
    ".vscode"
  ],
  "ts-node": {
    "esm": true
  }
}
